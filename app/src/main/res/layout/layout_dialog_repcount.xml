<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/primary_dark" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"

                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bg_circle_col_icon_bg"
                android:contentDescription="logo"
                android:elevation="4dp"
                android:src="@drawable/ic_body_builder_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:fontFamily="@font/playfair_bold_compat"
                android:padding="16dp"

                android:text="Enter Total Rep count for each Exercize:"

                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/card_break"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/primary"
                android:padding="16dp"

                >

                <TextView
                    android:id="@+id/tv_d_repcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/railway_medium_compat"

                    android:text="15"
                    android:textAllCaps="true"

                    android:textColor="@color/white_fff"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"

                    android:fontFamily="@font/railway_medium_compat"

                    android:text="reps/exercize"
                    android:textColor="@color/white_fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ibt_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_c4rectangle_col_accent_light"

                    android:padding="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_add_black" />

                <ImageButton
                    android:id="@+id/ibt_minus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_c4rectangle_col_accent_light"
                    android:padding="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_subtract_black" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_d_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bg_o_c2rectangle_white_black"
                android:fontFamily="@font/playfair_bold_compat"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="Start"
                android:textAllCaps="true"
                android:textColor="@color/primary_dark"
                android:textSize="32dp"
                android:textStyle="bold"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>

