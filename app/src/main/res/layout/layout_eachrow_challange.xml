<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/temp_single_ex_details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:background="@color/icon_bg"
        app:cardCornerRadius="4dp">


        <ImageView
            android:id="@+id/iv_chal_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_info"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:id="@+id/iv_chal_image"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_gravity="center"
                android:background="@drawable/bg_circle_pink_ffebee"
                android:scaleType="fitXY"
                android:src="@drawable/e1" />


            <TextView
                android:id="@+id/tv_chal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/railway_medium_compat"
                android:gravity="center"
                android:minLines="2"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"

                android:text="Situps"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
