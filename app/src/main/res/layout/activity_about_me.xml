<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"

    tools:context=".screens.aboutme.AboutMeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white_fff">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_circle_white_fff"
                android:elevation="2dp"
                android:src="@drawable/ansh_logo"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_circle_white_fff"
                android:elevation="2dp"
                android:src="@drawable/lco_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/primary"

            android:textColor="@color/white_fff"
            android:text="LCO Workout"
            android:textSize="24sp"
            android:fontFamily="@font/railway_medium_compat"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/icon_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textColor="@color/accent_dark"
                android:text="About this app"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/playfair_bold_compat"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:linksClickable="true"
                android:autoLink="all"
                android:textColorLink="@color/accent_dark"

                android:textColor="@color/primary_text"
                android:text="@string/about_app"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/railway_medium_compat"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/icon_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textColor="@color/accent_dark"
                android:text="About me"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/playfair_bold_compat"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textColor="@color/primary_text"
                android:text="@string/about_me"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:linksClickable="true"
                android:autoLink="all"
                android:textColorLink="@color/accent_dark"
                android:fontFamily="@font/railway_medium_compat"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/icon_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:textColor="@color/accent_dark"
                android:text="Challange Details"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/playfair_bold_compat"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textColor="@color/primary_text"
                android:text="@string/challange_details"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:linksClickable="true"
                android:autoLink="all"
                android:textColorLink="@color/accent_dark"
                android:fontFamily="@font/railway_medium_compat"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/icon_bg"
            android:layout_marginTop="8dp"

            android:layout_marginBottom="8dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textColor="@color/accent_dark"
                android:text="Open source attributions"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/playfair_bold_compat"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:textColor="@color/primary_text"
                    android:text="@string/opensource_link1"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/railway_medium_compat"
                    />


            </LinearLayout>




        </LinearLayout>







    </LinearLayout>




</androidx.core.widget.NestedScrollView>