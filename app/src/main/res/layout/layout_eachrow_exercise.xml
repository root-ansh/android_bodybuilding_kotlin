<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/temp_single_ex_details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"

        android:background="@color/icon_bg"
        app:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_exercise_res"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bg_circle_pink_ffebee"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/e1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >


                <TextView
                    android:id="@+id/tv_infobub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/playfair_bold_compat"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:text="Situps"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_infobub_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/railway_medium_compat"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"

                    android:text="@string/lorem_small"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="8dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/tv_infobub_reptime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/railway_medium_compat"
                    android:gravity="start"
                    android:padding="8dp"
                    android:text="4 Seconds Per Rep"
                    android:textColor="@color/accent_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:orientation="vertical">


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_chal_info"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_margin="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cancel"
            android:visibility="visible" />


    </androidx.cardview.widget.CardView>


</FrameLayout>