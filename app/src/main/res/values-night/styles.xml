<resources>
    <!-- Application theme for dark theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_dark</item>


        <item name="android:windowTranslucentStatus">true</item>




    </style>

    <style name="Theme.App.StatusPrimary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
    </style>



    <style name="Theme.App.StatusIconBg" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/icon_bg</item>


    </style>


</resources>